{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Country Temperature",
    "width": 800,
    "height": 400,
    "config": {
      "background":"#fffaec"
    },
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "https://raw.githubusercontent.com/Q-g2/3179/main/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Q-g2/3179/main/ne_10m_ocean.json",
          "format": {"type": "topojson", "feature": "ne_10m_ocean"}
        },
        "mark": {"type": "geoshape", "fill": "#5cc9f1"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Q-g2/3179/main/ne_110m_graticules_30.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": "", "stroke": "lightgray"}
      },
      {
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "grey"},
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}},
        "transform": [
          {
          "lookup": "properties.NAME",
          "from": {
            "data": {
            "url": "https://raw.githubusercontent.com/Q-g2/3179/main/GlobalWeatherRepository.csv"
            },
            "key": "country",
            "fields": ["temperature_celsius"]
            }
          }
        ],
        "mark": {"type": "geoshape"},
        "encoding": {
          "color": {
            "field": "temperature_celsius",
            "type": "quantitative",
            "scale":{
            "domain":[-2, 45],
            "range": ["#ffe4b5", "#ff4500"]
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title":
            "country"},
            {"field": "temperature_celsius", "type": "quantitative"}
          ]
      }
      }
    ]
  }