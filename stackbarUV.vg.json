{
  "data": {"url": "https://raw.githubusercontent.com/Q-g2/3179/main/ModifiedGlobalWeatherRepository.csv"},
  "mark": "bar",
  "encoding": {
    "y": {
      "aggregate": "count",
      "field": "uv_index",
      "stack":  "normalize"
    },
    "x": {
      "field": "Continent",
      "type": "ordinal",
      "title": "Global Continent"
    },
    
    "color": {
      "field": "uv_index",
      "type": "ordinal",
      "scale": {
        "domain": ["1", "2", "3", "4", "5", "6"],
        "range": ["#e7ba52", "#fa9fb5", "#636363", "#1f77b4", "#9467bd", "#f03b20"]
      },
      "title": "UV Index"
    }
  }
}
  