{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {"text":"Global Country Temperature", "align": "center","anchor": "middle", "fontSize": 20,"fontWeight":"bolder", "color":"brown" },
    "width": 800,
    "height": 500,
    "config": {
      "background":"#fffaec"
    },
    "params": [
      {
        "name": "regional_selection",
        "bind":{
          "input": "select",
          "options":[
            null,
            "Africa",
            "America",
            "Asia",
            "Atlantic",
            "Australia",
            "Europe",
            "Indian",
            "Pacific"
          ],
          "labels": [
            "Show All",
            "Africa",
            "America",
            "Asia",
            "Atlantic",
            "Australia",
            "Europe",
            "Indian",
            "Pacific"
          ],
          "name": "Regional Selection:"
        }
      }
    ],
    "projection": {"type": "equalEarth"},
    "data": {
        "url": "https://raw.githubusercontent.com/Q-g2/3179/main/ne_110m_admin_0_countries.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "layer": [
      {
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
          }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "grey"},
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Q-g2/3179/main/ne_10m_ocean.json",
          "format": {"type": "topojson", "feature": "ne_10m_ocean"}
        },
        "mark": {"type": "geoshape", "fill": "#5cc9f1"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/Q-g2/3179/main/ne_110m_graticules_30.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": "", "stroke": "lightgray"}
      },
      {
        "params": [
          {"name": "country_highlight", "select":{"type": "point", "on":"mouseover"}}
        ],
        "transform": [
          {
          "lookup": "properties.NAME",
          "from": {
            "data": {
            "url": "https://raw.githubusercontent.com/Q-g2/3179/main/AnotherGlobalWeatherRepository.csv"
            },
            "key": "country",
            "fields": ["country", "temperature_celsius", "Continent"]
            }
          },
          {
            "filter": "regional_selection == null || datum['Continent'] == regional_selection"
          }
        ],
        "mark":{"type":"geoshape", "stroke":"white"},
        "encoding": {
          "color": {
            "field": "temperature_celsius",
            "type": "quantitative",
            "scale":{
            "domain":[-2, 45],
            "range": ["#ffe4b5", "#ff4500"]
            },
            "title": ["temperature(celsius)"]
          },
          "strokeWidth":{
            "condition":[{"param": "country_highlight", "empty": false, "value":2}],
            "value": 0.3
          },
          "opacity":{
            "condition":{"param": "country_highlight", "value": 1},
            "value": 0.3
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title":
            "country"},
            {"field":"Continent", "type": "nominal", "title": "Continent"},
            {"field": "temperature_celsius", "type": "quantitative","title":"Temperature","format":".3s"}
          ]
        }
      }
    ]
  }